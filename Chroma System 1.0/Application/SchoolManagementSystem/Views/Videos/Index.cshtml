@model List<UserControl>

@{
    ViewBag.Title = "Videos";
}

<div class="container">
    <h1 class="text-center">Videos</h1>
    <div class="row">

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Gelecek burada </h5>
                        <p class="card-text"></p>
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src="https://www.youtube.com/watch?v=RW-1AX2GWlI" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">Add a New Video</h2>
            <form method="post">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="Title" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="Description" rows="3" required></textarea>
                </div>
                <div class="form-group">
                    <label for="url">YouTube URL</label>
                    <input type="url" class="form-control" id="url" name="Url" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
