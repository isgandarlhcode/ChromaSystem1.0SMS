@model IEnumerable<DatabaseAccess.AttendanceTable>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Submit Attendance", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Attandance Record</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-condensed table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Student ID
                        </th>
                        <th>
                           Class
                        </th>
                        <th>
                            Student
                        </th>

                        <th>
                          Attend Date
                        </th>
                        <th>
                           Attend Time
                        </th>
                      

                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AttendDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AttendTime)
                            </td>
                      

                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.AttendanceID }, new { @class="btn btn-primary"}) 
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
